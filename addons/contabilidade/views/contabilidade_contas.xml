<odoo>
    <!-- Action -->
    <record id="action_contabilidade_contas" model="ir.actions.act_window">
        <field name="name">Contas</field>
        <field name="res_model">contabilidade.contas</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <!-- Visão Lista -->
    <record id="view_contabilidade_contas_tree" model="ir.ui.view">
        <field name="name">contabilidade.contas.tree</field>
        <field name="model">contabilidade.contas</field>
        <field name="arch" type="xml">
            <tree string="Contas" default_order="name asc">
                <field name="name" string="Conta"/>
                <field name="grupo_contabil"/>
                <field name="subgrupo1"/>
            </tree>
        </field>
    </record>

    <!-- Visão Formulário -->
    <record id="view_contabilidade_contas_form" model="ir.ui.view">
        <field name="name">contabilidade.contas.form</field>
        <field name="model">contabilidade.contas</field>
        <field name="arch" type="xml">
            <form string="Conta">
                <sheet>
                    <group>
                        <field name="name" invisible="id == False" string="Conta" placeholder="Ex: Banco, Fornecedores..."/>
                        <field name="conta" invisible="id != False"/>
                        <field name="codigo" invisible="1"/>
                        <field name="grupo_contabil"/>
                        <field name="subgrupo1" invisible="grupo_contabil != 'nao_circulante'" required="grupo_contabil == 'nao_circulante'" widget="selection_badge"/>
                        <field name="descricao"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
