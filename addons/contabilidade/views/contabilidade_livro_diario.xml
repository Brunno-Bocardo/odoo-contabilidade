
<odoo>
    <!-- Action -->
    <record id="action_contabilidade_livro_diario" model="ir.actions.act_window">
        <field name="name">Livro Diário</field>
        <field name="res_model">contabilidade.livro.diario</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Visão Lista -->
    <record id="view_contabilidade_livro_diario_tree" model="ir.ui.view">
        <field name="name">contabilidade.livro.diario.tree</field>
        <field name="model">contabilidade.livro.diario</field>
        <field name="arch" type="xml">
            <!-- colocando o atributo editable="bottom" na tag tree para permitir edição rápida
            isso impede o acesso imediato ao formulário ao clicar na linha
            por isso, incluí um botão para acessar o formulário - o que requiriu a criação do método action_open_form no modelo -->
            <tree string="Livro Diário" editable="bottom">
                <field name="data"/>
                <field name="descricao"/>
                <field name="conta_credito_id"/>
                <field name="conta_debito_id"/>
                <field name="valor" widget="monetary"/>
                <field name="currency_id" invisible="1" column_invisible="1"/>
                <!-- botão para acessar o formulário -->
                <button name="action_open_form" type="object" icon="fa-eye" class="btn btn-outline-primary"/>
            </tree>
        </field>
    </record>

    <!-- Visão Formulário -->
    <record id="view_contabilidade_livro_diario_form" model="ir.ui.view">
        <field name="name">contabilidade.livro.diario.form</field>
        <field name="model">contabilidade.livro.diario</field>
        <field name="arch" type="xml">
            <form string="Livro Diário">
                <sheet>
                    <group>
                        <group>
                            <field name="data"/>
                            <field name="conta_credito_id"/>
                            <field name="conta_debito_id"/>
                        </group>

                        <group>
                            <field name="valor" widget="monetary"/>
                            <field name="descricao"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>