<odoo>
    <data>

        <record id="action_contabilidade_dre" model="ir.actions.act_window">
            <field name="name">Demonstração do Resultado (DRE)</field>
            <field name="res_model">contabilidade.dre.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_contabilidade_dre_wizard_form" model="ir.ui.view">
            <field name="name">contabilidade.dre.wizard.form</field>
            <field name="model">contabilidade.dre.wizard</field>
            <field name="arch" type="xml">
                <form string="DRE - Demonstração do Resultado">
                    <sheet>
                        <group>
                            <group string="Filtros">
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="show_zero_accounts"/>
                                <field name="currency_id" invisible="1"/>
                            </group>

                            <group string="Nota Explicativa (Receita)">
                                <field name="receita_bruta" readonly="1" widget="monetary"/>
                                <field name="impostos_sobre_venda" readonly="1" widget="monetary"/>
                                <field name="devolucoes" readonly="1" widget="monetary"/>
                                <field name="receita_liquida" readonly="1" widget="monetary"/>
                            </group>

                            <group string="Custo e Resultado Bruto">
                                <field name="custo_inicial" readonly="1" widget="monetary"/>
                                <field name="custo_atual" readonly="1" widget="monetary"/>
                                <field name="lucro_bruto" readonly="1" widget="monetary"/>
                            </group>

                            <group string="Despesas Operacionais e Financeiras">
                                <field name="despesas_operacionais" readonly="1" widget="monetary"/>
                                <field name="resultado_antes_financeiro" readonly="1" widget="monetary"/>
                                <field name="receita_financeira" readonly="1" widget="monetary"/>
                                <field name="despesa_financeira" readonly="1" widget="monetary"/>
                                <field name="lucro_liquido" readonly="1" widget="monetary"/>
                            </group>
                        </group>

                        <group string="Demonstrativo - Linhas" invisible="date_from == False or date_to == False">
                            <field name="line_ids" string="">
                                <tree create="0" edit="0" delete="0" decoration-bf="display_type != 'line'">
                                    <field name="display_type" invisible="1"/>
                                    <field name="conta_id"/>
                                    <field name="name"/>
                                    <field name="valor" widget="monetary"/>
                                    <field name="av_percent" string="% sobre Receitas" widget="percentage"/>
                                </tree>
                            </field>
                        </group>

                    </sheet>
                    <footer>
                        <button string="Fechar" class="btn-oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
