<odoo>
    <data>

        <record id="action_contabilidade_dre" model="ir.actions.act_window">
            <field name="name">Demonstração do Resultado (DRE)</field>
            <field name="res_model">contabilidade.dre.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_contabilidade_dre_wizard_form" model="ir.ui.view">
            <field name="name">contabilidade.dre.wizard.form</field>
            <field name="model">contabilidade.dre.wizard</field>
            <field name="arch" type="xml">
                <form string="DRE - Demonstração do Resultado">
                    <sheet>
                        <group string="Período de Análise">
                            <group>
                                <label for="month" string="Mês:"/>
                                <div>
                                    <field name="month"  class="oe_inline"/>
                                    <field name="year"  class="oe_inline"/>
                                </div>
                            </group>
                            <group>
                                <field name="show_zero_accounts"/>
                                <field name="currency_id" widget="many2one" invisible="1"/>
                            </group>
                        </group>

                        <group >
                            <field name="line_ids" string="">
                                <tree create="0" edit="0" delete="0" decoration-bf="display_type != 'line'">
                                    <field name="display_type" column_invisible="1"/>
                                    <field name="conta_id" column_invisible="1"/>
                                    <field name="name"/>
                                    <field name="valor" widget="monetary"/>
                                </tree>
                            </field>
                        </group>

                    </sheet>
                    <footer>
                        <button string="Fechar" class="btn-oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
