<odoo>
    <data>

        <record id="action_contabilidade_balanco_patrimonial" model="ir.actions.act_window">
            <field name="name">Balanço Patrimonial</field>
            <field name="res_model">contabilidade.balanco.patrimonial.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_balanco_patrimonial_wizard_form" model="ir.ui.view">
            <field name="name">contabilidade.balanco.patrimonial.wizard.form</field>
            <field name="model">contabilidade.balanco.patrimonial.wizard</field>
            <field name="arch" type="xml">
                <form string="Balanço Patrimonial">
                    <sheet>
                        <group>
                            <group string="Filters">
                                <field name="date_recent"/>
                                <field name="date_previous"/>
                                <field name="show_zero_accounts"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <!-- <group string="Totals">
                                <field name="total_ativo_recent" widget="monetary" readonly="1"/>
                                <field name="total_ativo_previous" widget="monetary" readonly="1"/>
                                <field name="total_passivo_pl_recent" widget="monetary" readonly="1"/>
                                <field name="total_passivo_pl_previous" widget="monetary" readonly="1"/>
                            </group> -->
                        </group>

                        <group invisible="date_recent == False or date_previous == False">
                            <field name="line_ids" string="">
                                <tree create="0" edit="0" delete="0" decoration-bf="display_type != 'line'">
                                    <field name="section" column_invisible="1"/>
                                    <field name="display_type" column_invisible="1"/>
                                    <field name="group_key" column_invisible="1"/>
                                    <field name="currency_id" column_invisible="1"/>

                                    <field name="name"/>

                                    <!-- coluna data recente -->
                                    <field name="saldo_recent" widget="monetary"/>
                                    <field name="av_recent" widget="percentage"/>

                                    <!-- coluna data anterior -->
                                    <field name="saldo_previous" widget="monetary"/>
                                    <field name="av_previous" widget="percentage"/>

                                    <!-- análise horizontal -->
                                    <field name="ah_percent" string="AH%" widget="percentage"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>

                    <footer>
                        <button string="Fechar" class="btn-oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
